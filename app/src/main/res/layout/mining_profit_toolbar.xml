<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="titleVm" type="com.sigmapool.common.viewModels.ITitleViewModel"/>

        <variable name="toolbarVm"
                  type="com.sigmapool.app.screens.miningProfit.viewModels.IMiningProfitToolbarViewModel"/>
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/gradient_status_bar"

            tools:showIn="@layout/fragment_minig_profit">

        <ImageView
                style="@style/BackBtnStyle"
                android:id="@+id/backBtn"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="34dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/toolbarTitle"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/ToolbarTitle"
                android:text="@{titleVm.getTitle()}"
                android:textSize="19sp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/google_sans_bold"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/backBtn"
                app:layout_constraintTop_toTopOf="@+id/backBtn"

                tools:text="@string/mining_profit"/>

        <ImageView
                android:id="@+id/rubView"

                style="@style/RubView"

                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="14dp"
                android:adjustViewBounds="true"
                android:scaleType="center"

                app:iconChecked="@{@drawable/vector_rub}"
                app:iconUnchecked="@{@drawable/vector_usd}"
                app:onImageSelected="@{toolbarVm::onCurrencyBtnSelected}"

                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="@+id/profitButton"
                app:layout_constraintBottom_toBottomOf="@+id/profitButton"
                app:layout_constraintEnd_toStartOf="@+id/profitButton"/>

        <Button
                android:id="@+id/profitButton"
                style="@style/WhiteArrowBtn"

                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="12dp"
                android:text="@string/profit"

                android:onClick="@{(v) ->v.setActivated(!v.isActivated)}"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/toolbarTitle"
                app:layout_constraintTop_toTopOf="@+id/toolbarTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>