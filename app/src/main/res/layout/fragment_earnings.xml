<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

        <variable
                name="vm"
                type="org.sigmapool.sigmapool.screens.earnings.viewModel.EarningsVM"
                />
    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/screenBgColor"
                android:orientation="vertical"
                >

            <include
                    layout="@layout/coin_toolbar"

                    app:vm="@{vm.toolbarVm}"
                    />

            <include
                    layout="@layout/fragment_earnings_list"

                    app:vm="@{vm}"
                    />

        </LinearLayout>

        <include
                layout="@layout/observer_mode"
                app:isVisible="@{vm.isObserverMode}"
                />

    </FrameLayout>

</layout>