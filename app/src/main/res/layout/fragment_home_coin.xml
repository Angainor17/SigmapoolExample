<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

        <variable
                name="vm"
                type="com.sigmapool.app.screens.home.coin.CoinsVM"
                />

        <variable
                name="fragmentManager"
                type="androidx.fragment.app.FragmentManager"
                />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#EFF3F7"
            >

        <com.sigmapool.app.utils.customViews.FragmentViewPager
                android:id="@+id/pager"

                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@null"

                app:isWrapHeightEnabled="@{true}"
                app:isPagingEnabled="@{true}"

                app:initCoinAdapter="@{vm}"
                app:fragmentManager="@{fragmentManager}"
                />

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabDots"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:pager="@{(pager)}"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                />

    </LinearLayout>

</layout>