<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >

    <data>

        <variable
                name="vm"
                type="com.sigmapool.app.screens.poolInfo.viewmodel.PoolInfoLtcViewModel"
                />
    </data>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical"
            >

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"

                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="6dp"
                app:cardElevation="@dimen/card_view_elevation_default"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    >

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/poolInfoBlockMargin"
                        android:layout_marginBottom="@dimen/poolInfoBlockMargin"
                        >

                    <TextView
                            style="@style/ItemLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="@string/fee"
                            />

                    <TextView
                            android:id="@+id/ppsValues"
                            style="@style/ItemLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@string/pps"
                            />

                    <TextView
                            style="@style/ItemValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginEnd="4dp"
                            android:layout_toStartOf="@id/ppsValues"
                            android:text="@{vm.pps}"
                            tools:text="0%"
                            />
                </RelativeLayout>

                <View style="@style/DividerPoolInfo" />

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/poolInfoBlockMargin"
                        android:layout_marginBottom="@dimen/poolInfoBlockMargin"
                        >

                    <TextView
                            style="@style/ItemLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="@string/dailyProfitPerTHs"
                            />

                    <TextView
                            android:id="@+id/profitValue"
                            style="@style/ItemValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_toLeftOf="@id/profitUnits"
                            android:text="@{vm.dailyProfit}"
                            tools:text="0.00003750"
                            />

                    <TextView
                            android:id="@+id/profitUnits"
                            style="@style/ItemLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@string/ltc"
                            />
                </RelativeLayout>

                <View style="@style/DividerPoolInfo" />

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/poolInfoBlockMargin"
                        android:layout_marginBottom="@dimen/poolInfoBlockMargin"
                        >

                    <TextView
                            style="@style/ItemLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="@string/payment_time_utc"
                            />

                    <TextView
                            style="@style/ItemValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@{vm.paymentTime}"
                            tools:text="19:00-22:00"
                            />


                </RelativeLayout>

                <View style="@style/DividerPoolInfo" />

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/poolInfoBlockMargin"
                        android:layout_marginBottom="@dimen/poolInfoBlockMargin"
                        >

                    <TextView
                            style="@style/ItemLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="@string/minimumPayout"
                            />

                    <TextView
                            android:id="@+id/minimumPayoutValue"
                            style="@style/ItemValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_toLeftOf="@id/minimumPayoutUnits"
                            android:text="@{vm.paymentMin}"
                            tools:text="0.001"
                            />

                    <TextView
                            android:id="@+id/minimumPayoutUnits"
                            style="@style/ItemLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@string/ltc"
                            />


                </RelativeLayout>

                <View style="@style/DividerPoolInfo" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/poolInfoBlockMargin"

                        android:layout_marginBottom="@dimen/poolInfoBlockMargin"
                        android:orientation="vertical"
                        >

                    <TextView
                            style="@style/ItemLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="@string/settlementDetails"
                            />

                    <TextView
                            style="@style/ItemValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{vm.settlementDetails}"
                            tools:text="Settlement is proceeded at UTC 0:30 for yesterday's mining profit. The payment will be delayed in cases of no wallet address, address modification in last 72 hours and balance not reaching minimum payment threshold."
                            />
                </LinearLayout>

                <View style="@style/DividerPoolInfo" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/poolInfoBlockMargin"

                        android:layout_marginBottom="@dimen/poolInfoBlockMargin"
                        android:orientation="vertical"
                        >

                    <TextView
                            style="@style/ItemLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="@string/miningURL"
                            />

                    <TextView
                            android:id="@+id/ltcUrlsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:linksClickable="true"
                            android:text="@{vm.stratumURLs}"
                            android:textColorLink="#081EEA"
                            tools:text="stratum+tcp://eu2.ltc.sigmapool.com:3333\nstratum+tcp://eu3.ltc.sigmapool.com:3333\nstratum+tcp://eu4.ltc.sigmapool.com:3333"
                            />
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>