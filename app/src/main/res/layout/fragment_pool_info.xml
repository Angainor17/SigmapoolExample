<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
>

    <data>
        <variable name="vm" type="com.sigmapool.app.screens.poolInfo.viewmodel.PoolInfoViewModel"/>
        <variable name="toolbarVm" type="com.sigmapool.app.utils.interfaces.IBackBtnScreen"/>
    </data>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_status_bar"
                android:focusable="true"
                android:orientation="vertical">

            <include
                    layout="@layout/pool_info_toolbar"
                    app:titleVm="@{vm}"
                    app:toolbarVm="@{toolbarVm}"
                    app:currencySwitcherVm="@{vm}"
            />

        </LinearLayout>

        <LinearLayout
                android:background="@drawable/miner_background"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <!-- TODO: disable swipe -->

            <com.sigmapool.app.utils.customViews.viewPager.SwipeFreeViewPager
                    android:btc_selected="@{vm.btcSelected}"
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />

        </LinearLayout>
    </LinearLayout>

</layout>