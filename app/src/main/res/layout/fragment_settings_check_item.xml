<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >

    <data>

        <import type="android.view.View"/>

        <variable
                name="label"
                type="String"
                />

        <variable
                name="value"
                type="Boolean"
                />

        <variable
                name="isTopSeparatorVisible"
                type="Boolean"
                />

        <variable
                name="switchListener"
                type="com.suke.widget.SwitchButton.OnCheckedChangeListener"
                />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/RippleRect"

            android:layout_width="match_parent"
            android:onClick="@{(v) -> switchBtn.setChecked(!switchBtn.isChecked())}"
            android:layout_height="wrap_content"
            >

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d6d6d6"
                android:visibility="@{isTopSeparatorVisible ? View.VISIBLE : View.GONE}"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        <TextView
                android:id="@+id/label"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/google_sans_regular"
                android:layout_marginStart="16dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="@{label}"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                tools:text="@string/push_notification"
                />

        <com.suke.widget.SwitchButton
                android:id="@+id/switchBtn"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:duplicateParentState="true"

                app:sb_checkline_color="@color/transparent"
                app:sb_uncheckcircle_color="@color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:onCheckedChange="@{switchListener}"

                tools:text="$ 11 224.42"
                />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d6d6d6"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>