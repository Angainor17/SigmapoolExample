<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >

    <data>

        <variable
                name="vm"
                type="com.sigmapool.app.screens.dashboard.viewModel.DashboardChartInfoVM"
                />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/screenBgColor"
            android:layout_marginBottom="6dp"
            >

        <View
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/gradient_status_bar"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="6dp"

                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="6dp"
                app:cardElevation="@dimen/card_view_elevation_default"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    >

                <TextView
                        android:id="@+id/avg_hashrate_label"
                        style="@style/DashBoardChartInfoTitleStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="4dp"
                        android:text="@string/avg_hashrate"

                        app:layout_constraintEnd_toStartOf="@+id/view_switch"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                <TextView
                        android:id="@+id/avg_hashrate_value"
                        style="@style/DashboardChartInfoValueStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@{vm.avgHashrateValue}"

                        app:layout_constraintEnd_toStartOf="@+id/avg_hashrate_postfix"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/avg_hashrate_label"

                        tools:text="156.25"
                        />


                <include
                        android:id="@+id/view_switch"

                        layout="@layout/custom_switcher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="2dp"
                        app:layout_constraintBottom_toBottomOf="@+id/avg_hashrate_label"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"

                        app:layout_constraintStart_toEndOf="@+id/avg_hashrate_label"
                        app:layout_constraintTop_toTopOf="@+id/avg_hashrate_label"
                        app:vm="@{vm.customSwitchVm}"
                        />

                <TextView
                        android:id="@+id/avg_hashrate_postfix"
                        style="@style/DashboardChartInfoPostfixStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"

                        android:text="@{vm.avgHashratePostfix}"
                        app:layout_constraintBaseline_toBaselineOf="@+id/avg_hashrate_value"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"

                        app:layout_constraintStart_toEndOf="@+id/avg_hashrate_value"
                        tools:text="PH/s"
                        />

                <TextView
                        android:id="@+id/earned_last_label"
                        style="@style/DashBoardChartInfoTitleStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/earned_last_24h"

                        app:layout_constraintBaseline_toBaselineOf="@+id/avg_hashrate_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        />

                <TextView
                        android:id="@+id/earned_last_value"
                        style="@style/DashboardChartInfoValueStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@{vm.earnedLastValue}"

                        app:layout_constraintEnd_toStartOf="@+id/earned_last_postfix"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toEndOf="@+id/avg_hashrate_postfix"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/earned_last_label"

                        tools:text="0.04357"
                        />

                <TextView
                        android:id="@+id/earned_last_postfix"
                        style="@style/DashboardChartInfoPostfixStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"

                        android:text="@{vm.coin}"
                        app:layout_constraintBaseline_toBaselineOf="@+id/earned_last_value"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"

                        app:layout_constraintStart_toEndOf="@+id/earned_last_value"
                        tools:text="BTC"
                        />

                <TextView
                        android:id="@+id/balance_label"
                        style="@style/DashBoardChartInfoTitleStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/balance"

                        app:layout_constraintBaseline_toBaselineOf="@+id/workers_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        />

                <TextView
                        android:id="@+id/balance_value"
                        style="@style/DashboardChartInfoValueStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"

                        android:text="@{vm.balanceValue}"
                        app:layout_constraintEnd_toStartOf="@+id/balance_postfix"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toEndOf="@+id/allContainer"
                        app:layout_constraintStart_toStartOf="@+id/guideline"

                        app:layout_constraintTop_toBottomOf="@+id/balance_label"
                        tools:text="0.04357"
                        />

                <TextView
                        android:id="@+id/balance_postfix"
                        style="@style/DashboardChartInfoPostfixStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"

                        android:text="@{vm.coin}"
                        app:layout_constraintBaseline_toBaselineOf="@+id/balance_value"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintStart_toEndOf="@+id/balance_value"
                        tools:text="BTC"
                        />

                <TextView
                        android:id="@+id/workers_label"
                        style="@style/DashBoardChartInfoTitleStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/workers"

                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/avg_hashrate_value"
                        />


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/allContainer"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"

                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toEndOf="@+id/onlineContainer"
                        app:layout_constraintTop_toTopOf="@+id/onlineContainer"
                        >


                    <TextView
                            android:id="@+id/all_prefix"
                            style="@style/DashboardChartInfoPrefixStyle"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/all"

                            app:layout_constraintEnd_toStartOf="@+id/all_value"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                    <TextView
                            android:id="@+id/all_value"
                            style="@style/DashboardChartInfoValueStyle"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{vm.allWorker}"

                            app:layout_constraintBaseline_toBaselineOf="@+id/all_prefix"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/all_prefix"

                            tools:text="145"
                            />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/onlineContainer"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="4dp"

                        android:layout_marginBottom="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/allContainer"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/workers_label"
                        >

                    <TextView
                            android:id="@+id/online_prefix"
                            style="@style/DashboardChartInfoPrefixStyle"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/online"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                    <TextView
                            android:id="@+id/online_value"
                            style="@style/DashboardChartInfoValueStyle"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="3dp"
                            android:text="@{vm.onlineWorker}"

                            app:layout_constraintBaseline_toBaselineOf="@+id/online_prefix"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/online_prefix"

                            tools:text="135"
                            />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintGuide_percent="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>