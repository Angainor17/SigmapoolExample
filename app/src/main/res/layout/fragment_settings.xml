<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

        <import type="android.view.View"/>

        <variable
                name="vm"
                type="com.sigmapool.app.screens.settings.viewModel.SettingsVM"
                />
    </data>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

        <include
                layout="@layout/settings_toolbar"

                app:vm="@{vm.toolbarVm}"
                />

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/screenBgColor"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >

                <include
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="30dp"
                        layout="@layout/fragment_settings_select_item"

                        app:label="@{@string/language}"
                        app:value="@{vm.languageLiveData}"
                        app:isTopSeparatorVisible="@{true}"
                        app:clickListener="@{v->vm.languageSelect()}"
                        />

                <include
                        layout="@layout/fragment_settings_select_item"

                        app:label="@{@string/currency}"
                        app:value="@{vm.currencyLiveData}"
                        app:isTopSeparatorVisible="@{false}"
                        app:clickListener="@{v->vm.currencySelect()}"
                        />

                <include
                        layout="@layout/fragment_settings_check_item"

                        app:label="@{@string/push_notification}"
                        app:value="@{vm.pushLiveData}"
                        app:isTopSeparatorVisible="@{false}"
                        app:switchListener="@{(v, checked)->vm.pushSwitch(checked)}"
                        />

                <include
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="18dp"
                        layout="@layout/fragment_settings_select_item"

                        app:label="@{@string/payment_scheme}"
                        app:value="@{vm.schemeLiveData}"
                        app:isTopSeparatorVisible="@{true}"
                        app:clickListener="@{v->vm.schemeSelect()}"
                        />

                <include
                        layout="@layout/fragment_settings_select_item"

                        app:label="@{@string/limit}"
                        app:value="@{vm.limitLiveData}"
                        app:isTopSeparatorVisible="@{false}"
                        app:clickListener="@{v->vm.limitSelect()}"
                        />

                <include
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="18dp"
                        layout="@layout/fragment_settings_text_item"

                        app:label="@{@string/write_review}"
                        app:isTopSeparatorVisible="@{true}"
                        app:clickListener="@{v->vm.writeReview()}"
                        />

                <include
                        layout="@layout/fragment_settings_text_item"

                        app:label="@{@string/mark_app}"
                        app:isTopSeparatorVisible="@{false}"
                        app:clickListener="@{v->vm.markApp()}"
                        />

                <include
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="24dp"
                        android:visibility="@{vm.isLoginLiveData ? View.VISIBLE : View.GONE}"
                        layout="@layout/fragment_settings_center_title"


                        app:label="@{@string/exit}"
                        app:isTopSeparatorVisible="@{true}"
                        app:clickListener="@{v->vm.exit()}"
                        />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>