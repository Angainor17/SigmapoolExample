<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >

    <data>

        <variable
                name="vm"
                type="com.sigmapool.app.utils.customViews.CustomSwitchVm"
                />
    </data>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@{vm.rightDrawable}"

                tools:layout_width="200dp"
                >

            <LinearLayout
                    android:id="@+id/leftContainer"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:background="@{vm.leftDrawable}"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="@{v->vm.leftClick()}"
                    android:orientation="vertical"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/rightContainer"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:onActivatedChange="@{vm.leftActivated}"
                    >

                <TextView
                        style="@style/SwitcherTextStyle"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{v->vm.leftClick()}"
                        android:text="@{vm.leftText}"
                        android:textColor="@{vm.textColor}"

                        app:onActivatedChange="@{vm.leftActivated}"

                        tools:text="@string/twenty_four_hour"
                        />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/rightContainer"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@{vm.rightDrawable}"
                    android:duplicateParentState="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="@{v->vm.rightClick()}"
                    android:orientation="vertical"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/leftContainer"
                    app:layout_constraintTop_toTopOf="parent"
                    app:onActivatedChange="@{vm.rightActivated}"

                    tools:text="24d"
                    >

                <TextView
                        style="@style/SwitcherTextStyle"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:onClick="@{v->vm.rightClick()}"
                        android:text="@{vm.rightText}"
                        android:textColor="@{vm.textColor}"

                        app:onActivatedChange="@{vm.rightActivated}"

                        tools:text="1h"
                        />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>