<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >

    <data>

        <import type="kotlin.collections.CollectionsKt"/>

        <variable
                name="vm"
                type="com.sigmapool.app.screens.workers.viewModel.WorkersTabVM"
                />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"

            android:background="@drawable/gradient_status_bar"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/onlineContainer"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/workers_tab_bg_ripple"

                app:onClickAction="@{v->vm.onlineTabSelected()}"
                app:onActivatedChange="@{true}"
                app:disabledView="@{CollectionsKt.arrayListOf(offlineContainer,allContainer)}"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/offlineContainer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                >

            <TextView
                    android:id="@+id/onlineLabel"

                    style="@style/WorkerTabTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/online"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintEnd_toStartOf="@+id/onlineValue"
                    />

            <TextView
                    android:id="@+id/onlineValue"

                    style="@style/TabValueStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="4dp"
                    android:text="@{vm.onlineCount}"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/onlineLabel"
                    app:layout_constraintBaseline_toBaselineOf="@+id/onlineLabel"

                    tools:text="34"
                    />

            <TextView
                    android:id="@+id/hashrateValue"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#C4FFFFFF"
                    android:fontFamily="@font/google_sans_regular"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@{vm.onlineHashrate}"
                    android:textSize="13dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/onlineLabel"
                    app:layout_constraintBottom_toBottomOf="parent"

                    tools:text="704 TH/s"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/offlineContainer"

                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/workers_tab_bg_ripple"

                app:onClickAction="@{v->vm.offlineTabSelected()}"
                app:onActivatedChange="@{false}"
                app:disabledView="@{CollectionsKt.arrayListOf(onlineContainer,allContainer)}"

                app:layout_constraintBottom_toBottomOf="@+id/onlineContainer"
                app:layout_constraintStart_toEndOf="@+id/onlineContainer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/allContainer"
                app:layout_constraintHorizontal_weight="1"
                >

            <TextView
                    android:id="@+id/offlineLabel"

                    style="@style/WorkerTabTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offline"
                    android:layout_marginStart="8dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/offlineValue"
                    android:layout_marginEnd="4dp"
                    />

            <TextView
                    android:id="@+id/offlineValue"

                    style="@style/TabValueStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF6262"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="@{vm.offlineCount}"

                    app:layout_constraintStart_toEndOf="@+id/offlineLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@+id/offlineLabel"

                    tools:text="6"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/allContainer"

                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/workers_tab_bg_ripple"

                app:onClickAction="@{v->vm.allTabSelected()}"
                app:onActivatedChange="@{false}"
                app:disabledView="@{CollectionsKt.arrayListOf(onlineContainer,offlineContainer)}"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/offlineContainer"
                app:layout_constraintBottom_toBottomOf="@+id/onlineContainer"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginStart="8dp"
                >

            <TextView
                    android:id="@+id/allLabel"

                    style="@style/WorkerTabTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="4dp"

                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/allValue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            <TextView
                    android:id="@+id/allValue"

                    style="@style/TabValueStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="@{vm.totalCount}"

                    app:layout_constraintBaseline_toBaselineOf="@+id/allLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/allLabel"

                    tools:text="40"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
                android:id="@+id/leftSeparator"
                style="@style/VerticalTabSeparator"
                android:layout_height="0dp"

                app:layout_constraintEnd_toStartOf="@+id/offlineContainer"
                app:layout_constraintStart_toEndOf="@+id/onlineContainer"
                app:layout_constraintBottom_toBottomOf="@+id/onlineContainer"
                app:layout_constraintTop_toTopOf="@+id/onlineContainer"
                />

        <View
                android:id="@+id/rightSeparator"
                style="@style/VerticalTabSeparator"
                android:layout_height="0dp"

                app:layout_constraintEnd_toStartOf="@+id/allContainer"
                app:layout_constraintStart_toEndOf="@+id/offlineContainer"
                app:layout_constraintBottom_toBottomOf="@+id/onlineContainer"
                app:layout_constraintTop_toTopOf="@+id/onlineContainer"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>