        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

        <variable
                name="vm"
                type="com.sigmapool.app.screens.calculator.viewModel.CalcItemVM"
                />

    </data>

    <androidx.cardview.widget.CardView
