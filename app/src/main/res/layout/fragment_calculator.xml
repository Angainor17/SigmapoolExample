<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="org.sigmapool.sigmapool.screens.calculator.viewModel.CalculatorVM" />

        <variable
            name="fragmentManager"
            type="androidx.fragment.app.FragmentManager" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screenBgColor"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include
            layout="@layout/fragment_calculator_header"

            app:vm="@{vm}" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:onRefreshListener="@{() -> vm.onRefresh()}"
            app:refreshing="@{vm.refreshing}">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/coloredLine"

                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@drawable/gradient_status_bar"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <org.sigmapool.sigmapool.utils.customViews.viewPager.FragmentViewPager
                        android:id="@+id/viewPager"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"

                        app:initCalcAdapter="@{vm.calcItems}"
                        app:isWrapHeightEnabled="@{true}"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"

                        app:layout_constraintTop_toTopOf="@id/coloredLine"
                        app:onScreenChange="@{vm.tabPositionLiveData}"
                        app:viewCalcTabAdapter="@{fragmentManager}" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

</layout>