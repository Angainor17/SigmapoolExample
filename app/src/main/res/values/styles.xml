<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>

    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">17.12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MinerItemTitle">
        <item name="android:textSize">13dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="MinerItemText">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="LoginTextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/titleGray</item>
        <item name="android:textSize">17sp</item>

        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">#CCD4DC</item>
        <item name="colorControlActivated">@color/violet</item>
    </style>

    <style name="TextInputLayoutHintStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18dp</item>
        <item name="android:color">@color/titleGray</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>


</resources>
