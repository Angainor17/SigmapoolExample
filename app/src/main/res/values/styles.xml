<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme"
            parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">17.12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MinerItemTitle">
        <item name="android:textSize">13dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="MinerItemText">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="LoginTextLabel"
            parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/titleGray</item>
        <item name="android:textSize">17sp</item>

        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">#CCD4DC</item>
        <item name="colorControlActivated">@color/violet</item>
    </style>

    <style name="TextInputLayoutHintStyle"
            parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18dp</item>
        <item name="android:color">@color/titleGray</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="LoginBtnStyle">
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="PoolTitle">
        <item name="android:textColor">@color/titleGray</item>
        <item name="android:textSize">13dp</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="PoolText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#C2E6E9EC</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="DividerPoolInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#C2E6E9EC</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/titleGray</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="ItemValue">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textColor">#363636</item>
    </style>

    <style name="TabTextViewStyleNoSelectable"
            parent="TabTextViewStyle">
        <item name="android:textColor">@color/tab_color_text</item>
    </style>

    <style name="TabTextViewStyle">
        <item name="android:layout_marginLeft">42dp</item>
        <item name="android:layout_marginRight">42dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="TitleHeaderStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/google_sans_bold</item>
    </style>

    <style name="RippleRect">
        <item name="android:background">@drawable/rect_ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="WorkerTabTitleStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabValueStyle">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="VerticalTabSeparator">
        <item name="android:layout_width">2dp</item>
        <item name="android:background">@drawable/vertical_separator</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="WorkerHeaderItemStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textColor">#9B9B9B</item>
    </style>

    <style name="AlertEditTextStyle"
            parent="android:Widget.EditText">

        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:background">@android:drawable/editbox_background_normal</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="DashBoardChartInfoTitleStyle">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textColor">@color/titleGray</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="DashboardChartInfoValueStyle">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textColor">#543eac</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="DashboardChartInfoPostfixStyle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">#646464</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="DashboardChartInfoPrefixStyle">
        <item name="android:textColor">#646464</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="MySwitchCompat" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
