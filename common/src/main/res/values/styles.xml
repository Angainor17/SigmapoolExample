<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WhiteSelectableItemTheme">
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>

    <style name="RippleView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="RubView" parent="RippleView">
        <item name="android:padding">9dp</item>
        <item name="android:background">@drawable/ic_rub_background</item>
    </style>

    <style name="BackBtnStyle" parent="RippleView">
        <item name="android:src">@drawable/ic_back_white</item>
        <item name="android:theme">@style/WhiteSelectableItemTheme</item>
        <item name="android:padding">7dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="WhiteArrowBtn" parent="IconBtn">
        <item name="android:background">@drawable/arrow_up_background_ripple</item>
        <item name="android:drawableEnd">@drawable/arrow_up_drawable</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">15dp</item>
    </style>


    <style name="IconBtn" parent="RippleView">
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

</resources>
